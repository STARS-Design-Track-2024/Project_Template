module counter(
    input logic clk, rst, count_start,
    input logic [3:0]max,  
    output logic atmax,
    output logic [3:0]countout
);
    logic [3:0]nextcount; 

    always_ff @(posedge clk, negedge rst)
    if (rst)begin
        countout <= '0;
        atmax <= 1'b0;
    end
    else begin
        countout <= nextcount;
        if(countout == max)begin
            atmax <= 1'b1;
        end
        else begin
            atmax <= 1'b0;
        end
    end
    
    always_comb begin
        if(count_start == 1'b1)begin
            if (countout == max)begin
                nextcount = 4'b0;
            end
            else begin  
                nextcount = countout + 4'b0001;
            end
        end
        else begin
            nextcount = 4'b0;
        end
    end
endmodule
